<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_5dp"
    android:layout_marginEnd="@dimen/spacing_10dp"
    android:paddingHorizontal="@dimen/spacing_10dp"
    android:paddingVertical="@dimen/spacing_10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIconMenu"
        android:layout_width="@dimen/spacing_30dp"
        android:layout_height="@dimen/spacing_30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenuName"
        style="@style/regualar.text_16sp"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/colorBaseText"
        app:layout_constraintBottom_toBottomOf="@+id/ivIconMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivIconMenu"
        app:layout_constraintTop_toTopOf="@+id/ivIconMenu" />


</androidx.constraintlayout.widget.ConstraintLayout>